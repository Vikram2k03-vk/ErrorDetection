<?xml version="1.0" encoding="UTF-8"?>
<processDefinition name="SampleJDBCProcess">
    <activities>
        <jdbcActivity name="UpdateOrder">
            <username>${DB_USER}</username>  <!-- Correct: variable -->
            <password>${DB_PASSWORD}</password> <!-- Correct: variable -->
            <timeout>${DB_timeout}</timeout>
            <query>UPDATE Orders SET status='processed'</query>
        </jdbcActivity>
    </activities>
</processDefinition>
